{
  "pipeline": {
    "name": "vocabulary",
    "display_name": "Vocabulary Cards (Fluent Forever)",
    "data_file": "vocabulary.json",
    "anki_note_type": "Fluent Forever",
    "stages": [
      "analyze_words",
      "prepare_batch",
      "ingest_batch",
      "generate_media",
      "validate_data",
      "sync_templates",
      "sync_cards"
    ]
  },
  "stage_providers": {
    "generate_media": "openai_forvo",
    "sync_templates": "anki",
    "sync_cards": "anki"
  },
  "batch_settings": {
    "cards_per_batch": 5,
    "max_meanings_per_word": 5,
    "require_prompts": true
  },
  "validation": {
    "validate_ipa": true,
    "require_all_fields": true,
    "check_media_exists": true
  }
