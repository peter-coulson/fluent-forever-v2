{
  "cli": {
    "output_format": "table",
    "show_progress": true,
    "confirm_destructive": true,
    "default_dry_run": false
  },
  "output_formats": {
    "table": {
      "use_colors": true,
      "max_width": 120,
      "truncate_long_fields": true
    },
    "json": {
      "pretty_print": true,
      "indent": 2
    },
    "csv": {
      "include_headers": true,
      "delimiter": ","
    }
  }
}
